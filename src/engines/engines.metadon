      bool '      Exclude SoConvertAll' COIN_EXCLUDE_SOCONVERTALL
    fi
  bool '   Exclude SoGate' COIN_EXCLUDE_SOGATE
  bool '   Exclude SoInterpolate' COIN_EXCLUDE_SOINTERPOLATE
    if [ "$COIN_EXCLUDE_SOINTERPOLATE" = "n" ]; then
      bool '      Exclude SoInterpolateFloat' COIN_EXCLUDE_SOINTERPOLATEFLOAT
      bool '      Exclude SoInterpolateRotation' COIN_EXCLUDE_SOINTERPOLATEROTATION
      bool '      Exclude SoInterpolateVec2f' COIN_EXCLUDE_SOINTERPOLATEVEC2F
      bool '      Exclude SoInterpolateVec3f' COIN_EXCLUDE_SOINTERPOLATEVEC3F
      bool '      Exclude SoInterpolateVec4f' COIN_EXCLUDE_SOINTERPOLATEVEC4F
    fi
  bool '   Exclude SoOnOff' COIN_EXCLUDE_SOONOFF
