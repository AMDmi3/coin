bool 'Disable engines' COIN_EXCLUDE_SOENGINE
if [ "$COIN_EXCLUDE_SOENGINE" = "n" ]; then
  bool '   Exclude SoBoolOperation' COIN_EXCLUDE_SOBOOLOPERATION
  bool '   Exclude SoCalculator' COIN_EXCLUDE_SOCALCULATOR
  bool '   Exclude SoComposeVec2f' COIN_EXCLUDE_SOCOMPOSEVEC2F
  bool '   Exclude SoComposeVec3f' COIN_EXCLUDE_SOCOMPOSEVEC3F
  bool '   Exclude SoComposeVec4f' COIN_EXCLUDE_SOCOMPOSEVEC4F
